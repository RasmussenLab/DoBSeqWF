    test {

        docker.enabled = true
        process {
            executor = 'local'

            resourceLimits = [
                cpus: 2,
                memory: '4.GB',
                time: '1.h'
            ]
        }

        params {
            outputDir = "results"
            fgbio = "fgbio"
            annotate = false
            spark_markdup = false

            ploidy = 2
            intervalList = ["small_ref"]
            testing = true
            annotate = false
            pooltable = "$projectDir/assets/data/test_data/pooltable.tsv"
            fqtable = "$projectDir/assets/data/test_data/pooltable.tsv"
